class Solution {
    public int similarPairs(String[] words) {
        int[] bits = new int[words.length];
        int result = 0;

        for(int i = 0; i < words.length; i++) {
            for(char c : words[i].toCharArray()) {
                bits[i] |= (1 << (c - 'a'));
            }
        }

        for(int i = 0; i < bits.length; i++) {
            for(int j = i + 1; j < bits.length; j++) {
                if(bits[i] == bits[j])
                    result++;
            }
        }
        
        return result;
    }
}
