/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    TreeNode prev;
    public TreeNode increasingBST(TreeNode root) {
        prev = new TreeNode(0);
        TreeNode curr = prev;
        inorder(root);
        return curr.right;
    }

    private void inorder(TreeNode root) {
        if(root == null) 
            return;
        
        inorder(root.left);

        root.left = null;
        prev.right = root;
        prev = root;
        inorder(root.right);

    }
}
